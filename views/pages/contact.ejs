<style>.contact-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 50px 0;
    background-color: #f4f7fc;
}

.contact-info {
    background-color: white;
    padding: 40px;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 800px;
    text-align: center;
}

.contact-info h2 {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #333;
}

.contact-info p {
    font-size: 16px;
    color: #555;
    line-height: 1.6;
    margin-bottom: 40px;
}

.contact-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-top: 30px;
}

.contact-item {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.contact-item h3 {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 10px;
    color: #333;
}

.contact-item p {
    font-size: 16px;
    color: #555;
}

@media (max-width: 768px) {
    .contact-details {
        grid-template-columns: 1fr;
    }
}</style>
